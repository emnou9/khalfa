pipeline {
   agent any

    stages {
        stage('Chekout') {
            steps {
	    checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/elyes97/RepoTest.git']]])
        echo 'Building..'  

	} 
	emailext body: 'test', subject: 'Test', to: 'emna.khalfa@esprit.tn'
	}
        stage('Build') {
            steps {
	    bat label: '', script: 'mvn install'
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
	    bat label: '', script: '''mvn test
'''
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
